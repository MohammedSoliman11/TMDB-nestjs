FROM node:18-alpine

WORKDIR /app

# Install cron and dependencies
RUN apk add --no-cache dcron

# Copy script and install dependencies
COPY scripts/sync-movies.js .
COPY package*.json ./
RUN npm install axios

# Add crontab file
RUN echo "0 0 * * * node /app/sync-movies.js >> /var/log/cron.log 2>&1" > /etc/crontabs/root

# Start cron daemon
CMD ["crond", "-f", "-d", "8"]